<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="142dp"
    android:layout_marginTop="32dp"
    app:cardCornerRadius="16dp"
    android:layout_marginLeft="32dp"
    android:layout_marginRight="32dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/borde_appointments">
        >
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="id or name"
        android:layout_margin="16dp"
        style="@style/UserNameTextViewStyle" />

    <TextView
        android:id="@+id/dateAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fecha"
        android:layout_margin="16dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        style="@style/DateTextViewStyle" />

    <TextView
        android:id="@+id/horAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hora"
        android:layout_margin="16dp"

        app:layout_constraintTop_toBottomOf="@id/dateAppointment"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        style="@style/HourTextViewStyle" />

    <TextView
        android:id="@+id/doctorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/userName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="doctor name"
        android:layout_margin="16dp"

        android:layout_marginTop="16dp"
        style="@style/DoctorNameTextViewStyle" />

    <TextView
        android:id="@+id/specialityDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/doctorName"
        app:layout_constraintStart_toStartOf="parent"
        android:text="speciality"
        android:layout_margin="16dp"

        android:layout_marginTop="16dp"
        style="@style/SpecialityTextViewStyle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Editar"
            android:layout_margin="16dp"

            style="@style/addBtn"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>